<p id="notice"><%= notice %></p>

<h1>Contestants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Show</th>
      <th>Placing</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contestants.each do |contestant| %>
      <tr>
        <td><%= contestant.name %></td>
        <td><%= contestant.description %></td>
        <td><%= contestant.show_id %></td>
        <td><%= contestant.placing %></td>
        <td><%= link_to 'Show', admin_contestant_path(contestant) %></td>
        <td><%= link_to 'Edit', edit_admin_contestant_path(contestant) %></td>
        <td><%= link_to 'Destroy', admin_contestant_path(contestant), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

