<p id="notice"><%= notice %></p>

<h1>Seasons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seasons.each do |season| %>
      <tr>
        <td><%= season.name %></td>
        <td><%= season.number %></td>
        <td><%= link_to 'Show', admin_season_path(season) %></td>
        <td><%= link_to 'Edit', edit_admin_season_path(season) %></td>
        <td><%= link_to 'Destroy', admin_season_path(season), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Season', new_admin_season_path %>
